{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "ignore": ["dist/**"],
    "rules": {
      "recommended": true,
      "complexity": {
        "useArrowFunction": "off",
        "useOptionalChain": "off",
        "noForEach": "off"
      },
      "style": {
        "useImportType": "off",
        "noNonNullAssertion": "off",
        "useTemplate": "off",
        "noParameterAssign": "off",
        "noUselessElse": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  }
}
